            android:name="nedearb.takp.frcscout.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nedearb.takp.frcscout.ListMenu"
            android:label="List" >
        </activity>
        <activity
            android:name="nedearb.takp.frcscout.ScoutDataEditor"
            android:label="Scout Editor" >
        </activity>
        <activity
            android:name="nedearb.takp.frcscout.MatchDataEditor"
            android:label="Match Editor" >
