<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:ignore="HardcodedText" 
    tools:context=".MatchDataEditor" >

    <ScrollView
        android:id="@+id/scrollViewMatchEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        tools:ignore="UselessParent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/editTextMatchMatchNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:hint="Match"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/editTextMatchTeamNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:hint="Team"
                    android:inputType="number" />

                <ToggleButton
                    android:id="@+id/toggleButtonMatchIsRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="Blue"
                    android:textOn="Red" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/checkBoxMatchAutonomous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autonomous" />

            <ScrollView
                android:id="@+id/scrollViewMatchEditorAuto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                tools:ignore="NestedScrolling" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <CheckBox
                            android:id="@+id/checkBoxMatchAutoHigh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="High" />

                        <CheckBox
                            android:id="@+id/checkBoxMatchAutoLow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Low" />

                        <CheckBox
                            android:id="@+id/checkBoxMatchDetectHot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hot" />

                        <CheckBox
                            android:id="@+id/checkBoxMatchAutoMobile"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mob." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <CheckBox
                            android:id="@+id/checkBoxMatchAutoMultiple"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Multi." />

                        <EditText
                            android:id="@+id/editTextMatchAutoPoints"
                            android:layout_width="112dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="Auto Points"
                            android:inputType="number" >
                        </EditText>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <CheckBox
                    android:id="@+id/checkBoxMatchOffense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offense" />

                <CheckBox
                    android:id="@+id/checkBoxMatchDefense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Defense" />

                <CheckBox
                    android:id="@+id/checkBoxMatchM2M"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M2M" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/checkBoxMatchTruss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Truss" />

                <CheckBox
                    android:id="@+id/checkBoxMatchCatch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catch" />

                <CheckBox
                    android:id="@+id/checkBoxMatchPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pass" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <CheckBox
                    android:id="@+id/checkBoxMatchHigh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High" />

                <CheckBox
                    android:id="@+id/checkBoxMatchLow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Low" />

                <CheckBox
                    android:id="@+id/checkBoxMatchHuman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Human" />

            </LinearLayout>

            <EditText
                android:id="@+id/editTextMatchAssists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Assists"
                android:inputType="number" >
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <CheckBox
                    android:id="@+id/checkBoxMatchWin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Win" />

                <EditText
                    android:id="@+id/editTextMatchPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="3"
                	android:hint="Points"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/editTextMatchPenalties"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="3"
                	android:hint="Penalties"
                    android:inputType="number" />

            </LinearLayout>

            <EditText
                android:id="@+id/editTextMatchNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="12"
                android:hint="Notes"
                android:inputType="textAutoCorrect" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
